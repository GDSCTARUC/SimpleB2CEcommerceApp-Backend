@model UserRegisterRequest

@{
    ViewData["Title"] = "Register";
}

<div class="flex flex-row justify-center mt-20">
    <div class="flex flex-col w-[350px]">
        <h1 class="text-4xl font-bold">Register</h1>

        <hr class="my-4"/>

        <form asp-action="Register" asp-controller="Account" method="post" class="flex flex-col gap-4">
            @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
            {
                <span class="text-red-600">Error Message: @ViewBag.ErrorMessage</span>
            }

            <div asp-validation-summary="ModelOnly" class="text-red-600"></div>

            <div>
                <label class="block mb-2 text-sm font-medium text-gray-900">@Html.DisplayNameFor(m => m.Username)</label>
                <input asp-for="Username" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="@Html.DisplayNameFor(m => m.Username)">
                <span asp-validation-for="Username" class="text-red-600"></span>
            </div>

            <div>
                <label class="block mb-2 text-sm font-medium text-gray-900">@Html.DisplayNameFor(m => m.FirstName)</label>
                <input asp-for="FirstName" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="@Html.DisplayNameFor(m => m.FirstName)">
                <span asp-validation-for="FirstName" class="text-red-600"></span>
            </div>

            <div>
                <label class="block mb-2 text-sm font-medium text-gray-900">@Html.DisplayNameFor(m => m.LastName)</label>
                <input asp-for="LastName" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="@Html.DisplayNameFor(m => m.LastName)">
                <span asp-validation-for="LastName" class="text-red-600"></span>
            </div>

            <div>
                <label class="block mb-2 text-sm font-medium text-gray-900">@Html.DisplayNameFor(m => m.Email)</label>
                <input asp-for="Email" type="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="@Html.DisplayNameFor(m => m.Email)">
                <span asp-validation-for="Email" class="text-red-600"></span>
            </div>

            <div>
                <label class="block mb-2 text-sm font-medium text-gray-900">@Html.DisplayNameFor(m => m.Password)</label>
                <input asp-for="Password" type="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="@Html.DisplayNameFor(m => m.Password)">
                <span asp-validation-for="Password" class="text-red-600"></span>
            </div>

            <div>
                <label class="block mb-2 text-sm font-medium text-gray-900">@Html.DisplayNameFor(m => m.PasswordRetype)</label>
                <input asp-for="PasswordRetype" type="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="@Html.DisplayNameFor(m => m.PasswordRetype)">
                <span asp-validation-for="PasswordRetype" class="text-red-600"></span>
            </div>

            <div class="flex justify-between">
                <span></span>
                <button type="submit" class="flex justify-between text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center">
                    Register
                    <svg aria-hidden="true" class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </button>
            </div>
        </form>
    </div>
</div>